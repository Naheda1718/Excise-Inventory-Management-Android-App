<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#A3DFE1DD"

                app:hintEnabled="true"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">



                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inprocessdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Date*"

android:textColor="@color/white"


                    app:shapeAppearanceOverlay="@drawable/shape"

                    android:focusable="false"
                    android:layout_marginTop="10dp"

                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/statespinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
android:paddingLeft="10dp"
                android:background="@drawable/shape"
                />


            <ImageView
                android:id="@+id/stateimage"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="200dp">

            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"


                android:orientation="horizontal">

                <TextView
                    android:id="@+id/checkboxtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"

                    android:text="Confirm stamps matches selected province* ">

                </TextView>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stampcheckbox">

                </CheckBox>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#A3DFE1DD"

                app:hintEnabled="true"

                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/stamptaken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:hint="Number Of Stamps Taken*"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#A3DFE1DD"

                app:hintEnabled="true"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Name*"
                    android:textColor="@color/white"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:inputType="text"
                    android:layout_marginTop="10dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#A3DFE1DD"

                app:hintEnabled="true"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/skulot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lot Number*"
                    android:textColor="@color/white"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:inputType="text"
                    android:layout_marginTop="10dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#A3DFE1DD"

                app:hintEnabled="true"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/datepicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Packaging Date(YYYY-MM-DD)*"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:inputType="date"
                    android:textColor="@color/white"

                    android:maxLength="10"
                    android:layout_marginTop="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#A3DFE1DD"

                app:hintEnabled="true"

                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Production Room Number/Location *"
                    android:inputType="text"
                    android:textColor="@color/white"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:layout_marginTop="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:visibility="gone"
                app:hintEnabled="true"

                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/returntoinv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Stamps return to inventory"
                    android:inputType="number"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:layout_marginTop="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:visibility="gone"
                app:hintEnabled="true"

                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/stampdamaged"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Damaged Stamps"
android:visibility="gone"
                    android:inputType="number"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:layout_marginTop="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:hintEnabled="true"

                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/damagereasn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Damage reason"
                    android:inputType="text"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:layout_marginTop="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/tracksubmit"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Submit"

                android:textAllCaps="false"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>