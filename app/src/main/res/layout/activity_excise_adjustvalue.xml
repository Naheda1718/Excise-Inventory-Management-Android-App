<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/adjustvalue_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#5FAA13"
            android:elevation="4dp"
            android:theme="?attr/actionBarTheme"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">









            <Spinner
                android:id="@+id/adjustspinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:paddingLeft="10dp"
                android:background="@drawable/shape"
                />





            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#A3DFE1DD"
                app:hintEnabled="true"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/adjustdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Date*"
                    android:textColor="@color/white"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:layout_marginTop="16dp"
                    android:focusable="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#A3DFE1DD"

                app:hintEnabled="true"

                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/adjustvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adjustment Value*"
                    android:inputType="number|numberSigned"
                    android:textColor="@color/white"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:layout_marginTop="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#A3DFE1DD"

                app:hintEnabled="true"

                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/adjustreason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Reason For Adjustment"
                    android:inputType="textMultiLine"

                    android:minLines="2"
                    android:maxLines="10"
                    android:textColor="@color/white"
                    app:shapeAppearanceOverlay="@drawable/shape"
                    android:layout_marginTop="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>








            <Button
                android:id="@+id/adjustbutton"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:inputType="textMultiLine"
                android:backgroundTint="#5FAA13"
                android:textAllCaps="false"
                android:textSize="18sp"/>


        </LinearLayout>
    </LinearLayout>
</ScrollView>