<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal">




    <TextView
        android:id="@+id/Datetime"

        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="DateTime"
        android:textSize="18sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/Reciveby"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="RecievedBy"
        android:textSize="18sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/recievefrm"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000"

        android:text="Recieve_From"
        />

    <TextView
        android:id="@+id/toteid"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="Tote_Id"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/productname"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="#000"
        android:gravity="center"

        android:text="Product_name"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/producttype"



        android:layout_width="120dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="#000"


        android:textSize="18sp"
        android:text="Product_type"

       />

    <TextView
        android:id="@+id/lot"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="#000"
        android:gravity="center"


        android:textSize="18sp"

        android:text="Lot"

     />

    <TextView
        android:id="@+id/weight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="#000"
        android:gravity="center"


        android:textSize="18sp"


        android:text="Weight"

      />
    <TextView
        android:id="@+id/qty"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="#000"
        android:gravity="center"


        android:textSize="18sp"
        android:text="Quantity"/>

    <TextView
        android:id="@+id/Location"
        android:layout_width="120dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="#000"


        android:textSize="18sp"
        android:text="Location"/>

    <!-- Add more TextViews here for additional details -->

</LinearLayout>
